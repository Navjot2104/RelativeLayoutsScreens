<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen2"
    android:background="@drawable/gradient1">

    <ImageView
        android:id="@+id/imaggee"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/exercise_health_fitness_weight" />

    <TextView
        android:id="@+id/fit"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imaggee"
        android:layout_centerHorizontal="true"
        android:text="FITNESS CLUB"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/wel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fit"
        android:text="WELCOME BACK"
        android:textColor="#ffffff"
        android:layout_marginTop="95dp"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wel"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="Sign In"
        android:textSize="25dp"
        android:textStyle="bold"
        android:backgroundTint="#831C1C"
        />
    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="Sign Up"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="#FFFFFF"/>

    <TextView
        android:id="@+id/loggg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/signup"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="162dp"
        android:layout_centerHorizontal="true"

        android:text="Login with social media"
        android:textColor="@color/white"
        android:textSize="20dp"
        />


    <ImageView
        android:id="@+id/ins"
        android:layout_width="89dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@id/loggg"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="-55dp"
        android:src="@drawable/instagram" />

    <ImageView
        android:layout_width="71dp"
        android:layout_height="49dp"
        android:layout_alignBottom="@id/loggg"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="-57dp"
        android:layout_toRightOf="@+id/ins"
        android:src="@drawable/twitter" />


</RelativeLayout>