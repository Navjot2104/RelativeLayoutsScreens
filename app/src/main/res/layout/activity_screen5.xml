<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:background="@drawable/backgrad11"
        >
        <TextView
            android:id="@+id/siiiignnnn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="138dp"
            android:text="Sign up"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="138dp"
            android:layout_toRightOf="@+id/siiiignnnn"
            android:text="Sign In"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:contentDescription="go to previous screen"/>
    <TextView
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#1E2F89"
        />

    <EditText
        android:id="@+id/mail"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/outline_attach_email_24"
        android:hint="Email"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@id/create"
        android:layout_marginLeft="15dp"/>
    <EditText
        android:id="@+id/pssw"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mail"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:drawableStart=""
        android:drawableEnd="@drawable/outline_hide_source_24"
        android:hint="Password"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/remm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pssw"
        android:text="Remember Password"
        android:textSize="18sp"
        android:drawableStart="@drawable/outline_check_box_outline_blank_24"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        />
    <TextView
        android:id="@+id/forgotpas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pssw"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:text="Forgot Password"
        android:textColor="#D50000"
        android:textSize="21dp"/>
    <Button
        android:id="@+id/sup"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Sign in"
        android:layout_below="@id/forgotpas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:textSize="20sp"
        android:backgroundTint="#06034E"/>
    <TextView
        android:id="@+id/signnn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---or sign up with---"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/sup"
        />
    <TextView
        android:id="@+id/ggl"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_below="@id/signnn"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/instagram"
        />

    <TextView
        android:id="@+id/twt"
        android:layout_width="58dp"
        android:layout_height="41dp"
        android:layout_below="@id/signnn"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/ggl"
        android:background="@drawable/twitter" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_below="@id/ggl"
        android:layout_marginTop="101dp"
        android:background="@drawable/grad22" />

</RelativeLayout>